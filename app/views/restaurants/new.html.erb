<div class="container mt-3">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category %>
    <%= f.input :phone_number %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  <p><%=link_to "Go back to restaurants", restaurants_path%></p>
</div>
